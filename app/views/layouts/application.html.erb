<!DOCTYPE html>
<html>
  <head>
    <title>StackOverflowClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <%= link_to('Home', root_path) %>
    <h1 id="name">Stack Overflow</h1>

    <% if current_user %>
      <%= current_user.email %> | <%= link_to "Sign out", '/signout' %>
    <% else %>
      | <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign in", '/signin' %>
    <% end %>
  | <%= link_to('Add Question', new_question_path)  %>
  </header>
  <br><br><br>
  <body>
    <div class="container">
      <% if flash[:alert] %>
        <div class="card">
          <%= flash[:alert] %>
        </div>
      <% end %>
      <% if flash[:notice] %>
        <div class="card">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <%= yield %>
    </div>
</body>
</html>
